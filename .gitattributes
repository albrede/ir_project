# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# HTML/CSS files
*.html text eol=lf
*.css text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Binary files
*.joblib binary
*.pkl binary
*.pickle binary
*.db binary
*.sqlite binary
*.sqlite3 binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg text eol=lf

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary 